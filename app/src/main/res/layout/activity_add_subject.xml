<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    android:orientation="vertical"
    tools:context="com.desapoint.desapoint.activities.ForgotPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:padding="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        android:text="Forgot password"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="4dp"
        android:id="@+id/university_setting"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/round_cyan_button"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_word"
            android:paddingLeft="6dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:hint="search subject to add"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/search_button"
        android:gravity="center"
        android:background="@drawable/round_cyan_button"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:fontFamily="sans-serif-light"
            android:padding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Search Subjects"
            android:padding="8dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="16dp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
